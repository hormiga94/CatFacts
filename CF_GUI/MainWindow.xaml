<Window x:Class="CF_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CF_GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Cat Facts" Height="259" Width="516">
    <Grid>

        <Label Content="File path: " HorizontalAlignment="Left" Margin="22,33,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbPath" HorizontalAlignment="Left" Margin="88,37,0,0" Text="TextBox" VerticalAlignment="Top" Width="348"/>
        <Button Name="btFileDlg" Content="..." HorizontalAlignment="Left" Margin="441,36,0,0" VerticalAlignment="Top" Width="30" Click="btFileDlg_Click"/>

        <Button Name="btGet" Content="Get cat fact!" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" Width="120" Click="btGet_Click" />

        <TextBlock Name="tblockFact" HorizontalAlignment="Left" Margin="22,122,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="449" Height="111"/>
        <ProgressBar Name="pbStatus" Margin="88,100,0,0" HorizontalAlignment="Left" Width="348" Height="11" VerticalAlignment="Top" IsIndeterminate="True"/>




    </Grid>
</Window>
